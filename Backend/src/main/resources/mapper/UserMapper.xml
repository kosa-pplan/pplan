<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.pplan.repository.mapper.UserMapper">

    <resultMap id="UserResultMap" type="org.pplan.service.dto.User.UserDTO">
        <id property="id" column="id" />
        <result property="email" column="email" />
        <result property="pwd" column="pwd" />
        <result property="phone_number" column="phone_number" />
        <result property="nickname" column="nickname" />
        <result property="user_type" column="user_type" />
    </resultMap>

    <select id="findByEmail" resultMap="UserResultMap">
        SELECT * FROM t_user WHERE email = #{email}
    </select>

    <insert id="insertUser">
        INSERT INTO t_user (email, pwd, phone_number, nickname)
        VALUES (#{email}, #{pwd}, #{phone_number}, #{nickname})
    </insert>

</mapper>