<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.pplan.repository.mapper.UserMapper">

    <resultMap id="UserSignUpResultMap" type="org.pplan.service.dto.User.UserSignUpDTO">
        <id property="id" column="id" />
        <result property="email" column="email" />
        <result property="pwd" column="pwd" />
        <result property="nickname" column="nickname" />
        <result property="user_type" column="user_type" />
    </resultMap>

    <resultMap id="UserLoginResultMap" type="org.pplan.service.dto.User.UserLoginDTO">
        <id property="id" column="id" />
        <result property="email" column="email" />
        <result property="pwd" column="pwd" />
    </resultMap>

    <select id="signUpFindByEmail" resultMap="UserSignUpResultMap">
        SELECT * FROM t_user WHERE email = #{email}
    </select>

    <select id="signUpFindByNickname" resultMap="UserSignUpResultMap">
        SELECT * FROM t_user WHERE nickname = #{nickname}
    </select>

    <select id="loginFindByEmail" resultMap="UserLoginResultMap">
        SELECT * FROM t_user WHERE email = #{email}
    </select>

    <insert id="insertUser">
        INSERT INTO t_user (email, pwd, nickname)
        VALUES (#{email}, #{pwd}, #{nickname})
    </insert>

</mapper>