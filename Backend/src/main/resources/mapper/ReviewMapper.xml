<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.pplan.repository.mapper.ReviewMapper">
    <resultMap id="reviewResultMap" type="org.pplan.service.dto.review.ReviewDTO">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="contents" column="contents"/>
        <result property="regDate" column="regDate"/>

        <!-- 리뷰에 속한 이미지 리스트를 설정합니다. -->
        <collection property="reviewImageDTOList" ofType="org.pplan.service.dto.review.ReviewImageDTO">
            <result property="imageId" column="imageId"/>
            <result property="urlPath" column="urlPath"/>
            <result property="sUrlPath" column="sUrlPath"/>
        </collection>
    </resultMap>

    <!-- 리뷰 저장 -->
    <insert id="insertReview" parameterType="org.pplan.service.dto.review.ReviewDTO" useGeneratedKeys="true"
            keyProperty="id" keyColumn="ID">
        INSERT INTO T_REVIEW (TITLE, CONTENTS)
        VALUES (#{title}, #{contents})
    </insert>

    <!-- 이미지 저장 -->
    <insert id="insertReviewImage" parameterType="org.pplan.service.dto.review.ReviewImageDTO">
        INSERT INTO T_REVIEW_IMAGE (URL_PATH, S_URL_PATH, T_REVIEW_ID)
        VALUES (#{urlPath}, #{sUrlPath}, #{reviewId})
    </insert>

    <select id="reviewList" resultMap="reviewResultMap">
        SELECT r.id,
               r.title,
               r.contents,
               r.reg_date   AS regDate,
               i.id         AS imageId,
               i.url_path   AS urlPath,
               i.s_url_path AS sUrlPath
        FROM T_REVIEW r
                 LEFT JOIN T_REVIEW_IMAGE i ON r.id = i.t_review_id
    </select>

    <select id="getReview" parameterType="long" resultMap="reviewResultMap">
        SELECT r.id,
               r.title,
               r.contents,
               r.reg_date   AS regDate,
               i.id         AS imageId,
               i.url_path   AS urlPath,
               i.s_url_path AS sUrlPath
        FROM T_REVIEW r
                 LEFT JOIN T_REVIEW_IMAGE i ON r.id = i.t_review_id
        WHERE r.id = #{id}
    </select>

    <update id="reviewUpdate">
        update T_REVIEW
        set title    = #{title}
          , contents = #{contents}
          , REG_DATE = sysdate
        where ID = #{id}
    </update>

    <delete id="reviewDelete">
        delete
        from T_REVIEW
        where id = #{id}
    </delete>

</mapper>